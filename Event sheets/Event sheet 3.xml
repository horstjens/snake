<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Event sheet 3</name>
    <events>
        <comment>sounds</comment>
        <variable name="soundNumber" type="number">0</variable>
        <event-block>
            <conditions>
                <condition id="0" name="On collision with another object" type="spit">
                    <param id="0" name="Object">head</param>
                </condition>
            </conditions>
            <actions>
                <action id="0" name="Play" type="Audio">
                    <param id="0" name="Audio file">pflopp1</param>
                    <param id="1" name="Tag (optional)">&quot;&quot;</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="0" name="On collision with another object" type="spit">
                    <param id="0" name="Object">segment</param>
                </condition>
            </conditions>
            <actions>
                <action id="0" name="Play" type="Audio">
                    <param id="0" name="Audio file">pflopp2</param>
                    <param id="1" name="Tag (optional)">&quot;&quot;</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-6" name="Every X seconds" type="System">
                    <param id="0" name="Interval (seconds)">10</param>
                </condition>
            </conditions>
            <actions>
                <action id="-9" name="Set value" type="System">
                    <param id="0" name="Variable">soundNumber</param>
                    <param id="1" name="Value">int(random(2))</param>
                </action>
                <action id="0" name="Play" type="Audio">
                    <param id="0" name="Audio file">rattlesnake</param>
                    <param id="1" name="Tag (optional)">&quot;&quot;</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-6" name="Every X seconds" type="System">
                    <param id="0" name="Interval (seconds)">25</param>
                </condition>
            </conditions>
            <actions>
                <action id="-9" name="Set value" type="System">
                    <param id="0" name="Variable">soundNumber</param>
                    <param id="1" name="Value">int(random(2))</param>
                </action>
                <action id="0" name="Play" type="Audio">
                    <param id="0" name="Audio file">wind</param>
                    <param id="1" name="Tag (optional)">&quot;&quot;</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
